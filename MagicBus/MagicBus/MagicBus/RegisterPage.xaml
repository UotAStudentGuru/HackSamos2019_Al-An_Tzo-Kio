<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagicBus.RegisterPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Entry Placeholder="Email" x:Name="Mail"/>
            <Entry Placeholder="User Name" x:Name="UserName"/>
            <Entry Placeholder="Password" x:Name="Pass" IsPassword="True"/>
            <Entry Placeholder="Re-Enter-Password" x:Name="RePass" IsPassword="True"/>
            <Button FontAttributes="Bold" BackgroundColor="Yellow" Text="Register" HorizontalOptions="Center" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>